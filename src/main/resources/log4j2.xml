<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="io.prometheus.client.log4j2">
	<Properties>
		<Property name="LOG_EXCEPTION_CONVERSION_WORD">%xEx</Property>
		<Property name="LOG_LEVEL_PATTERN">%p</Property>
		<Property name="CONSOLE_LOG_PATTERN">[%style{%d{MM-ddHH:mm:ss}}][%highlight{${LOG_LEVEL_PATTERN}}][%c]%style{:}{faint}%m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="FILE_LOG_PATTERN">[%d{MM-ddHH:mm:ss}][${LOG_LEVEL_PATTERN}][%c]:%m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
	</Properties>
	<Appenders>

		<Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
			<!-- <PatternLayout pattern="${CONSOLE_LOG_PATTERN}" /> -->
			<JSONLayout compact="true" eventEol="true" endOfLine="\n" stacktraceAsString="true" />

		</Console>
		<!-- <RollingFile name="RollingFile" ignoreExceptions="false">
			<FileName>/var/log/calc.log</FileName>
			<FilePattern>/var/log/calc-%d{yyyy-MM-dd}.%i.log
			</FilePattern>
			<PatternLayout pattern="${FILE_LOG_PATTERN}" charset="UTF-8" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
				<SizeBasedTriggeringPolicy size="2 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile> -->
	</Appenders>
	<Loggers>
		<logger name="io.srinskit" level="ALL">

			<appender-ref ref="ConsoleAppender" />
			<!-- <appender-ref ref="RollingFile" /> -->
		</logger>
		<logger name="com.hazelcast" level="DEBUG">

			<appender-ref ref="ConsoleAppender" />
			<!-- <appender-ref ref="RollingFile" /> -->
		</logger>
		<Root level="DEBUG">

			<AppenderRef ref="ConsoleAppender" />
			<!-- <AppenderRef ref="RollingFile" /> -->
		</Root>
	</Loggers>
</Configuration>
